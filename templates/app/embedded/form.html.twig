{{ form_start(form, {attr: {'autocomplete': 'off'}}) }}

<div class="card">
{#    <div class="card-header hide-empty">{{ form_label(form) }}</div>#}
    <div class="card-body">
        {{ form_errors(form) }}
        {% block form %}
            {{ form_rest(form) }}
        {% endblock form %}

        <div class="card-footer ps-0">
            <div class="row">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </div>
    </div>

</div>
{{ form_end(form) }}
