{% extends '_app_base.html.twig' %}

{% block main -%}
    <turbo-frame id="main" class="main" data-turbo-frame="main" data-turbo-action="advance" data-turbo-prefetch="false">
        <div class="pagetitle">
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_entry') }}">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="{{ path('app_products_list') }}">Products</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a class="bi bi-plus-circle" href="{{ path('app_products_create') }}"></a>
                    </li>
                </ol>
            </nav>
        </div>

        {% block inner %}
            <div class="row" data-turbo-action="advance">
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <table class="table caption-top">
                                <caption>Products</caption>
                                <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Price</th>
                                    <th scope="col" class="text-end">Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for product in products %}
                                    <tr>
                                        <th scope="row">1</th>
                                        <td>
                                            <a href="{{ path('app_products_update', {'id': product.id}) }}" data-turbo-action="advance">
                                                {{ product.name }}
                                            </a>
                                        </td>
                                        <td>
                                            {{ product.price|money_localized_format }}
                                        </td>
                                        <td class="text-end">
                                            <a href="{{ path('app_products_transport', {'id': product.id}) }}" data-turbo-frame="details" data-turbo-action="advance">Transport</a>|
                                            <a href="{{ path('app_products_sales', {'id': product.id}) }}" data-turbo-frame="details" data-turbo-action="advance">Sales</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                {% block details %}<turbo-frame class="col-4 hide-empty" id="details"></turbo-frame>{% endblock %}

            </div>
        {% endblock %}
    </turbo-frame>
{%- endblock main %}
